<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane id="AnchorPane"
            maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0"
            prefWidth="600.0"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/2.2"
            fx:controller="controllers.GenreEditController">
  <children>
    <GridPane layoutX="0.0" layoutY="0.0" prefHeight="400.0" prefWidth="586.0">
      <children>
        <Label alignment="CENTER"
               prefHeight="76.0"
               prefWidth="300.0"
               text="Genre"
               GridPane.columnIndex="0"
               GridPane.rowIndex="0">
          <font>
            <Font name="System Bold" size="24.0"/>
          </font>
        </Label>
        <Label alignment="CENTER"
               prefWidth="300.0"
               text="Genre Name:"
               GridPane.columnIndex="0"
               GridPane.rowIndex="1"/>
        <TextField fx:id="genreName"
                   prefWidth="200.0"
                   GridPane.columnIndex="1"
                   GridPane.rowIndex="1"/>
        <BorderPane prefHeight="200.0"
                    prefWidth="200.0"
                    GridPane.columnIndex="1"
                    GridPane.rowIndex="2">
          <left>
            <Button fx:id="cancelButton"
                    cancelButton="true"
                    mnemonicParsing="false"
                    text="Cancel"/>
          </left>
          <right>
            <Button fx:id="submitButton"
                    defaultButton="true"
                    mnemonicParsing="false"
                    text="Submit"/>
          </right>
        </BorderPane>
      </children>
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
      </rowConstraints>
    </GridPane>
  </children>
</AnchorPane>
