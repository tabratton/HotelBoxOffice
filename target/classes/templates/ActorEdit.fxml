<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane id="AnchorPane"
            maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0"
            prefWidth="600.0"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/2.2"
            fx:controller="controllers.ActorEditController">
  <children>
    <GridPane layoutX="14.0"
              layoutY="14.0"
              prefHeight="372.0"
              prefWidth="572.0">
      <children>
        <Label alignment="CENTER"
               prefWidth="286.0"
               text="Actor Name:"
               GridPane.columnIndex="0"
               GridPane.rowIndex="0"/>
        <Label alignment="CENTER"
               prefWidth="286.0"
               text="Image URL:"
               GridPane.columnIndex="0"
               GridPane.rowIndex="1"/>
        <Label alignment="CENTER"
               prefWidth="286.0"
               text="Actor Bio:"
               GridPane.columnIndex="0"
               GridPane.rowIndex="2"/>
        <Label alignment="CENTER"
               prefWidth="286.0"
               text="Times Viewed:"
               GridPane.columnIndex="0"
               GridPane.rowIndex="3"/>
        <BorderPane prefHeight="200.0"
                    prefWidth="200.0"
                    GridPane.columnIndex="1"
                    GridPane.rowIndex="4">
          <left>
            <Button fx:id="cancelButton"
                    cancelButton="true"
                    mnemonicParsing="false"
                    text="Cancel"/>
          </left>
          <right>
            <Button fx:id="submitButton"
                    defaultButton="true"
                    mnemonicParsing="false"
                    text="Submit"/>
          </right>
        </BorderPane>
        <TextField fx:id="actorName"
                   prefWidth="200.0"
                   GridPane.columnIndex="1"
                   GridPane.rowIndex="0"/>
        <TextField fx:id="actorImage"
                   prefWidth="200.0"
                   GridPane.columnIndex="1"
                   GridPane.rowIndex="1"/>
        <TextArea fx:id="actorBio" prefWidth="200.0" GridPane.columnIndex="1"
                  GridPane.rowIndex="2"/>
        <TextField fx:id="timesViewed"
                   prefWidth="200.0"
                   GridPane.columnIndex="1"
                   GridPane.rowIndex="3"/>
      </children>
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
      </rowConstraints>
    </GridPane>
  </children>
</AnchorPane>
