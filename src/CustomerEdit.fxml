<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<GridPane
        fx:controller="CustomerEditController"
        fx:id="bottomGrid"
        maxHeight="-Infinity"
        maxWidth="-Infinity"
        minHeight="-Infinity"
        minWidth="-Infinity"
        prefHeight="400.0"
        prefWidth="600.0"
        xmlns="http://javafx.com/javafx/8"
        xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints
                hgrow="SOMETIMES"
                minWidth="10.0"
                prefWidth="100.0"/>
        <ColumnConstraints
                hgrow="SOMETIMES"
                minWidth="10.0"
                prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints
                minHeight="10.0"
                prefHeight="30.0"
                vgrow="SOMETIMES"/>
        <RowConstraints
                minHeight="10.0"
                prefHeight="30.0"
                vgrow="SOMETIMES"/>
        <RowConstraints
                minHeight="10.0"
                prefHeight="30.0"
                vgrow="SOMETIMES"/>
        <RowConstraints
                minHeight="10.0"
                prefHeight="30.0"
                vgrow="SOMETIMES"/>
        <RowConstraints
                minHeight="10.0"
                prefHeight="30.0"
                vgrow="SOMETIMES"/>
        <RowConstraints
                minHeight="10.0"
                prefHeight="30.0"
                vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label
                text="Customer Name:"
                GridPane.rowIndex="1"/>
        <Label
                text="Current Balance:"
                GridPane.rowIndex="2"/>
        <Label
                text="Current Room Number:"
                GridPane.rowIndex="3"/>
        <Label
                text="Customer ID:"/>
        <TextField
                fx:id="customerId"

                GridPane.columnIndex="1"/>
        <TextField
                fx:id="customerName"
                GridPane.columnIndex="1"
                GridPane.rowIndex="1"/>
        <TextField
                fx:id="customerBalance"
                GridPane.columnIndex="1"
                GridPane.rowIndex="2"/>
        <TextField
                fx:id="customerRoom"
                GridPane.columnIndex="1"
                GridPane.rowIndex="3"/>
        <GridPane
                GridPane.columnIndex="1"
                GridPane.rowIndex="4">
            <columnConstraints>
                <ColumnConstraints
                        hgrow="SOMETIMES"
                        minWidth="10.0"
                        prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints
                        minHeight="10.0"
                        prefHeight="30.0"
                        vgrow="SOMETIMES"/>
                <RowConstraints
                        minHeight="10.0"
                        prefHeight="30.0"
                        vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <TextField
                        fx:id="customerPassword"/>
                <TextField
                        fx:id="customerConfirm"
                        GridPane.rowIndex="1"/>
            </children>
        </GridPane>
        <GridPane
                GridPane.rowIndex="4">
            <columnConstraints>
                <ColumnConstraints
                        hgrow="SOMETIMES"
                        minWidth="10.0"
                        prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints
                        minHeight="10.0"
                        prefHeight="30.0"
                        vgrow="SOMETIMES"/>
                <RowConstraints
                        minHeight="10.0"
                        prefHeight="30.0"
                        vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label
                        text="Change Password:"/>
                <Label
                        text="Confirm Password:"
                        GridPane.rowIndex="1"/>
            </children>
        </GridPane>
        <Button
                fx:id="submitButton"
                mnemonicParsing="false"
                text="Submit"
                GridPane.columnIndex="1"
                GridPane.rowIndex="5"/>
    </children>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
    <padding>
        <Insets
                left="50.0"
                right="25.0"/>
    </padding>
</GridPane>
