<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="500.0"
            prefWidth="700.0"
            xmlns="http://javafx.com/javafx/8.0.112"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ActorPageController">

  <children>

    <Label fx:id="actorBio" layoutX="401.0" layoutY="114.0" text="Actor's Bio"/>

    <ImageView fx:id="imageView"
               layoutX="45.0"
               layoutY="97.0"
               pickOnBounds="true"
               preserveRatio="true"/>

    <GridPane alignment="CENTER"
              layoutX="88.0"
              layoutY="14.0"
              prefHeight="45.0"
              prefWidth="620.0">

      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES"
                           maxWidth="365.0"
                           minWidth="10.0"
                           prefWidth="322.0"/>

        <ColumnConstraints hgrow="SOMETIMES"
                           maxWidth="477.0"
                           minWidth="10.0"
                           prefWidth="298.0"/>
      </columnConstraints>

      <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
      </rowConstraints>

      <children>
        <Label fx:id="actorName"
               text="Actor's Name"
               GridPane.halignment="CENTER"
               GridPane.valignment="CENTER">

        </Label>

        <Button fx:id="goBack"
                alignment="CENTER"
                contentDisplay="CENTER"
                mnemonicParsing="false"
                text="Go Back"
                GridPane.columnIndex="1"
                GridPane.halignment="RIGHT"
                GridPane.hgrow="NEVER"
                GridPane.valignment="CENTER"
                GridPane.vgrow="NEVER"/>
      </children>
    </GridPane>
    <Label fx:id="listMovieLabel"
           layoutX="398.0"
           layoutY="216.0"
           prefHeight="21.0"
           prefWidth="215.0"
           text="List of movies:"/>
    <ScrollPane hbarPolicy="NEVER"
                layoutX="364.0"
                layoutY="260.0"
                minHeight="-Infinity"
                minWidth="-Infinity"
                prefHeight="312.0"
                prefWidth="326.0"
                GridPane.rowIndex="1">
      <content>
        <FlowPane fx:id="flowPane"
                  columnHalignment="CENTER"
                  hgap="10.0"
                  prefHeight="301.0"
                  prefWidth="318.0"
                  vgap="10.0"/>
      </content>
    </ScrollPane>

  </children>
</AnchorPane>
